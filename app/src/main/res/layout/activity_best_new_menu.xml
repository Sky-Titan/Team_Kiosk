<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:orientation="vertical"
    tools:context=".Activity.BestNewMenu">

    <TextView
        android:id="@+id/best_bestmenu"
        android:text="BEST"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_weight="0.1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/bestimg_bestmenu"
        android:scaleType="fitXY"
        android:background="@drawable/imagebutton_rounded"
        android:layout_weight="2.3"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/ment_bestmenu"
        android:text="최고의 원두 맛을 선사합니다."
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/bestname_bestmenu"
        android:textAlignment="center"
        android:layout_weight="0.1"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/new_bestmenu"
        android:text="New"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_weight="0.1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="2.2"
        android:weightSum="1">
        <TableRow
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageButton
                android:id="@+id/newimg1_bestmenu"
                android:scaleType="fitXY"
                android:background="@drawable/rounded"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/newimg2_bestmenu"
                android:scaleType="fitXY"
                android:background="@drawable/rounded"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/newimg3_bestmenu"
                android:scaleType="fitXY"
                android:background="@drawable/rounded"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_weight="0.3"
            android:weightSum="3"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/newname1_bestmenu"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/newname2_bestmenu"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/newname3_bestmenu"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/allmenu_bestmenu"
        android:text="@string/allmenu"
        android:textAlignment="center"
        android:background="@drawable/rounded"
        android:layout_weight="0.08"
        android:textColor="#DF4D4D"
        android:textSize="14dp"
        android:clickable="true"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>