<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="600dip"
    android:background="#FFFFFF"
    android:orientation="vertical"

    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/couponLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="600dip"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:weightSum="10.5"
        >
        <TextView
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="쿠폰 적립을 위해 본인 휴대폰 번호를 입력해 주세요"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            />
        <ImageView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:src = "@drawable/coupon"/>

        <EditText
            android:layout_weight="1.5"
            android:id="@+id/phonenumber_edit"
            android:layout_marginHorizontal="30dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text=""
            android:textStyle="bold"
            android:editable="false"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/numberPad_1"
                    android:tag="numberPad_1"


                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="1"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_2"
                    android:tag="numberPad_2"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_3"
                    android:tag="numberPad_3"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
                <TextView
                    android:id="@+id/numberPad_4"
                    android:tag="numberPad_4"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_5"
                    android:tag="numberPad_5"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="5"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_6"
                    android:tag="numberPad_6"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="6"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/numberPad_7"
                    android:tag="numberPad_7"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="7"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_8"
                    android:tag="numberPad_8"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="8"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_9"
                    android:tag="numberPad_9"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="9"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/numberPad_no1"
                    android:tag="numberPad_no1"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text=""

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="false"
                    android:focusable="true"
                    />
                <TextView
                    android:id="@+id/numberPad_0"
                    android:tag="numberPad_0"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="0"

                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:clickable="true"
                    android:focusable="true"
                    />
                <ImageButton
                    android:id="@+id/numberPad_10"
                    android:tag="numberPad_10"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:background="@drawable/ripple_numberpad"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:src="@drawable/delete2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/couponLayout_3"
            android:layout_below="@+id/couponLayout_1"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            >
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:id="@+id/btnCancel_coupon"
                android:background="@color/gray"
                android:textColor="@color/white"
                android:text="취 소"
                />
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:id="@+id/btnFinish_coupon"
                android:background="@color/yellow"
                android:textColor="@color/black"
                android:text="확 인"
                />
        </LinearLayout>
    </LinearLayout>





</RelativeLayout>