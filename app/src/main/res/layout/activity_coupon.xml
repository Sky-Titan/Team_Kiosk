<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dip"
    android:layout_height="500dip"
    android:background="#FFFFFF"
    android:weightSum="2"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠폰 적립을 위해 본인 휴대폰 번호를 입력해 주세요"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="35dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src = "@drawable/coupon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"

            android:textStyle="bold"
            android:editable="false"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:rowCount="4"
        android:columnCount="3">

        <TextView
            android:id="@+id/numberPad_1"
            android:tag="numberPad_1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="1"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_2"
            android:tag="numberPad_2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="2"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_3"
            android:tag="numberPad_3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="3"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_4"
            android:tag="numberPad_4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="4"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_5"
            android:tag="numberPad_5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="5"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_6"
            android:tag="numberPad_6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="6"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_7"
            android:tag="numberPad_7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="7"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_8"
            android:tag="numberPad_8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="8"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_9"
            android:tag="numberPad_9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="9"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_no1"
            android:tag="numberPad_no1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text=""
            android:layout_gravity="fill"
            android:clickable="false"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_0"
            android:tag="numberPad_0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text="0"
            android:layout_gravity="fill"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/numberPad_no2"
            android:tag="numberPad_no2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/ripple_numberpad"
            android:textAlignment="center"
            android:gravity="center"
            android:text=""
            android:layout_gravity="fill"
            android:clickable="false"
            android:focusable="true"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnCancel_coupon"
            android:background="@color/gray"
            android:textColor="@color/white"
            android:text="취 소"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnFinish_coupon"
            android:background="@color/yellow"
            android:textColor="@color/black"
            android:text="확 인"
            />
    </LinearLayout>

</LinearLayout>